generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Smartphone {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String   @unique
  price     Float
  capacity  Int
  color     String
  gallery   String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id        Int      @id @default(autoincrement())
  email     String
  phone     String
  name      String
  message   String?
  items     Json   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
